<odoo>
    <report
        id="ReportMineralSpe"
        model="NaturalParks.MineralSpe"
        string="MineralSpe Report"
        report_type="qweb-pdf"
        name="RecuperacionOdoo.ReportMineralSpe_view"
        file="RecuperacionOdoo.ReportMineralSpe"
    />

    <template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
      <xpath expr="//head" position="inside">
             <link rel='stylesheet' href="/RecuperacionOdoo/static/Src/css/style.css"/>
      </xpath>
    </template>

    <template id="ReportMineralSpe_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                
                <div class="header">
                    <img src='/RecuperacionOdoo/static/Src/img/icono.jpg'/>
                    <h1>NaturalParks</h1>
                </div> 
                <hr></hr>
                <div class="page">
                    <h1>MineralSpe Report</h1>
                    <p style="font-size: 22px;"><b>name:</b> <span t-field="doc.name"/> </p>
                    <p style="font-size: 22px;"><b>VulgarName:</b> <span t-field="doc.VulgarName"/> </p>
                    <p style="font-size: 22px;"><b>NumberOfSpecimens:</b> <span t-field="doc.NumberOfSpecimens"/></p>
                    <p style="font-size: 22px;"><b>MineralType:</b> <span t-field="doc.MineralType"/></p>
                </div>
                
            </t>
        </t>
    </template>
</odoo>