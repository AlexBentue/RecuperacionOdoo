<odoo>
    <report
        id="ReportVegetableSpe"
        model="NaturalParks.VegetableSpe"
        string="VegetableSpe Report"
        report_type="qweb-pdf"
        name="RecuperacionOdoo.ReportVegetableSpe_view"
        file="RecuperacionOdoo.ReportVegetableSpe"
    />

    <template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
      <xpath expr="//head" position="inside">
             <link rel='stylesheet' href="/RecuperacionOdoo/static/Src/css/style.css"/>
      </xpath>
    </template>

    <template id="ReportVegetableSpe_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                
                <div class="header">
                    <img src='/RecuperacionOdoo/static/Src/img/icono.png'/>
                    <h1>NaturalParks</h1>
                </div> 
                <hr></hr>
                <div class="page">
                    <h1>VegetableSpe Report</h1>
                    <p style="font-size: 22px;"><b>Name:</b> <span t-field="doc.name"/> </p>
                    <p style="font-size: 22px;"><b>VulgarName:</b> <span t-field="doc.VulgarName"/> </p>
                    <p style="font-size: 22px;"><b>NumberOfSpecimens:</b> <span t-field="doc.NumberOfSpecimens"/></p>
                    <p style="font-size: 22px;"><b>Flowering:</b> <span t-field="doc.Flowering"/></p>
                    <p style="font-size: 22px;"><b>FloweringSeason:</b> <span t-field="doc.FloweringSeason"/></p>
                    <p style="font-size: 22px;"><b>Depredated:</b> <span t-field="doc.Depredated"/></p>
                </div>
                
            </t>
        </t>
    </template>
</odoo>